PROJECT_ROOT = D:/GameEngine
include $(PROJECT_ROOT)/.env

SANDBOX_EXE_OUT = $(SANDBOX_ODIR)/main.exe
GAME_ENGINE_DLL_IN_SANDBOX = $(SANDBOX_ODIR)/ge.dll
GAME_ENGINE_STATIC_IN_SANDBOX = $(SANDBOX_ODIR)/ge.a

_SANDBOX_OBJS = sandbox.o
SANDBOX_OBJS = $(patsubst %,$(SANDBOX_ODIR)/%,$(_SANDBOX_OBJS))

$(SANDBOX_ODIR)/%.o: $(SANDBOX_SDIR)/%.cpp
	$(CC) -c $(SANDBOX_INC) -o $@ $<

$(SANDBOX_EXE_OUT): $(SANDBOX_OBJS)
	$(CC) $^ -o $@ $(SANDBOX_LINK_DIR) $(SANDBOX_LINK_LIB)

.PHONY: clean

clean:
	rm -f $(SANDBOX_ODIR)/*.o $(SANDBOX_ODIR)/*.exe $(GAME_ENGINE_DLL_IN_SANDBOX) $(GAME_ENGINE_STATIC_IN_SANDBOX)